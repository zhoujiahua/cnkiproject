<div class="card card-body">
  <h3>项目添加</h3>
  <p></p>
  <form action="/ideas" method="post">
    <div class="form-group">
      <label for="title">标题</label>
      <input type="text" class="form-control" name="title" value="{{title}}">
    </div>
    <div class="form-group">
      <label for="link">链接</label>
      <input type="text" class="form-control" name="link" value="{{link}}">
    </div>
    <div class="form-group">
      <label for="classify">分类</label>
      <input type="text" class="form-control" name="classify" value="{{classify}}">
    </div>
    <div class="form-group">
      <label for="details">详情</label>
      <textarea class="form-control" name="details">{{details}}</textarea>
    </div>
    <div class="form-group">
      <label for="remark">备注</label>
      <input type="text" class="form-control" name="remark" value="{{remark}}">
    </div>
    <button type="submit" class="btn btn-dark">提交</button>
  </form>
</div>